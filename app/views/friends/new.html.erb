<div class="login-signup">

<h3>Send A Text To <%= @friend.first_name%> <%= @friend.last_name%></h3><br>

  <%= form_tag "/users/#{current_user.id}/friends" do %>
    <%= text_field_tag "body", nil, :placeholder => "Enter Text Body" %>
    <%= hidden_field_tag 'friend_id', @friend.id %><br><br>
    <%= submit_tag "Send", :class => "btn btn-primary btn-xs" %>
  <% end %>

</div>